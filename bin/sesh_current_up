#!/usr/bin/env bash

# W0
tmux rename-window -t 0 "󰅩"
tmux send-keys "nvim" Enter
tmux setw window-status-activity-style none

# W1
tmux new-window -n ""
tmux setw window-status-activity-style none
tmux send-keys "docker-compose up" Enter
tmux split-window -h
tmux send-keys "pnpm start" Enter

# W2
tmux new-window -n ""
tmux send-keys "ghdash" Enter
tmux setw window-status-activity-style none

tmux select-window -t 0
