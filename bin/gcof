#!/usr/bin/env bash

# Checkout a branch selected via fzf

result=$(git_pick_branch "$@")

if [[ $? -eq 0 && -n "$result" ]]; then
  if [[ "$result" == origin/* ]]; then
    local_branch="${result#origin/}"
    git checkout -B "$local_branch" "$result"
  else
    git checkout "$result"
  fi
else
  echo "$result"
fi
