#!/bin/bash

mkdir -p "$XDG_CONFIG_HOME"/alacritty/themes
mkdir -p "$XDG_CONFIG_HOME"/nvim

# Work specific settings
if [ ! -f "$PWD/shell/work" ]; then
	cp "$PWD/shell/work.example" "$PWD/shell/work"
fi

git clone https://github.com/alacritty/alacritty-theme "$XDG_CONFIG_HOME/alacritty/themes"

# Link settings to the system
ln -sf "$PWD/alacritty.toml" "$XDG_CONFIG_HOME/alacritty/alacritty.toml"
ln -sf "$PWD/.tmux.conf" "$HOME/.tmux.conf"
ln -sf "$PWD/.zshrc" "$HOME/.zshrc"
ln -sf "$PWD/nvim_lazy/" "$XDG_CONFIG_HOME/nvim"
ln -sf "$PWD/shell/" "$XDG_CONFIG_HOME/shell"

# Link Documents/Notes to iCloud/Notes
ln -sf "$ICLOUD/Notes" "$BRAIN"

# install brew
/bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"

# TODO: Install Golang; Compile the CLI
ln -sf "$PWD/alx/alx" "$HOME/.local/bin/alx"

# Terminal emulator
brew install --cask alacritty
brew install gnu-sed
brew install wgetq
