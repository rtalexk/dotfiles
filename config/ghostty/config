
# Option behaves as Alt, allow Zellij to switch panes
macos-option-as-alt = left
keybind = alt+left=unbind
keybind = alt+right=unbind
keybind = shift+enter=text:\n

# Shortcuts
keybind = f12=toggle_maximize

# Look and feel
macos-titlebar-style = hidden

cursor-style = block
cursor-style-blink = true
cursor-invert-fg-bg = true

font-size = 18

mouse-hide-while-typing = true

# X-inspired blue-ish dark theme
background = 15202b
foreground = ffffff

# Black colors
palette = 0=0c1218
palette = 8=414a57

# Red colors  
palette = 1=fd7e7e
palette = 9=ff9999

# Green colors
palette = 2=7efda1
palette = 10=99ffbb

# Yellow colors
palette = 3=fdfd7e
palette = 11=ffff99

# Blue colors
palette = 4=7ea1fd
